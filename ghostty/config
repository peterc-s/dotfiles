# Splits
keybind = ctrl+shift+enter=new_split:right
keybind = ctrl+alt+shift+l=equalize_splits

keybind = ctrl+shift+right_bracket=goto_split:next
keybind = ctrl+shift+left_bracket=goto_split:previous

keybind = ctrl+alt+shift+up=resize_split:up,10
keybind = ctrl+alt+shift+left=resize_split:left,10
keybind = ctrl+alt+shift+down=resize_split:down,10
keybind = ctrl+alt+shift+right=resize_split:right,10

# Tabs
keybind = ctrl+shift+left=previous_tab
keybind = ctrl+shift+right=next_tab

# Scrolling
keybind = page_up=scroll_page_up
keybind = page_down=scroll_page_down
keybind = end=scroll_to_bottom
keybind = home=scroll_to_top
