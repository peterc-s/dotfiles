### Includes
include '/usr/share/sway/config.d/*.conf'
include '/etc/sway/config.d/*'
include "${XDG_CONFIG_HOME:-$HOME/.config}/sway/config.d/*.conf"

### Variables
set $mod Mod4
set $left h
set $down j
set $up k
set $right l
set $term kitty
set $explorer nemo
set $lock_cmd swaylock \
	--image /home/pete/Drive/Pictures/wlfgrl.png \
	--indicator-radius 25 \
	--indicator-thickness 5 \
	--ring-color 373B41 \
	--key-hl-color F0C674 \
	--inside-wrong-color C56242 \
	--ring-wrong-color C56424 \
	--inside-clear-color F0C674 \
	--ring-ver-color 8ABEB7 \
	--inside-ver-color 8ABEB7 \
	--effect-blur 7x5
set $rofi_cmd rofi \
        -terminal '$term'
set $menu $rofi_cmd -show combi -combi-modes drun#run -modes combi
set $browser librewolf
set $mute_mic_cmd pulsemixer --list-sources | rg -i "mic" | cut -f3 | cut -d "," -f1 | cut -c 6- | xargs -L1 pulsemixer --toggle-mute --id

### Output configuration
output * bg /home/pete/Drive/Pictures/wlfgrl.png fill
# output eDP-1 position 0,1080
# output HDMI-A-1 position 0,0
exec way-displays > /tmp/way-displays.${XDG_VTNR}.${USER}.log 2>&1

### Set workspaces
workspace 1 output eDP-1
workspace 2 output eDP-1
workspace 3 output eDP-1
workspace 4 output eDP-1
workspace 5 output eDP-1
workspace 6 output HDMI-A-1
workspace 7 output HDMI-A-1
workspace 8 output HDMI-A-1
workspace 9 output HDMI-A-1
workspace 10 output HDMI-A-1

### Startup
exec swayidle -w \
         timeout 300 $lock_cmd \
         timeout 600 'swaymsg "output * power off"' resume 'swaymsg "output * power on"' \
         before-sleep $lock_cmd
exec waybar
exec dunst
exec autotiling-rs

### Lock on lid shut
bindswitch lid:on exec $lock_cmd

### Input configuration
input * {
	xkb_layout "gb"
	xkb_options caps:escape
}

### Key bindings
# Opening stuff
bindsym Ctrl+Mod1+t exec $term
bindsym $mod+e exec $explorer
bindsym $mod+x kill
bindsym $mod+d exec $menu
bindsym $mod+w exec $browser
floating_modifier $mod normal
bindsym $mod+Escape reload
bindsym $mod+Alt+q exec swaymsg exit
bindsym $mod+o exec obsidian

# Fn keys
bindsym XF86AudioMicMute exec $mute_mic_cmd
bindsym XF86AudioMute exec pulsemixer --toggle-mute
bindsym XF86AudioRaiseVolume exec pulsemixer --change-volume +5
bindsym XF86AudioLowerVolume exec pulsemixer --change-volume -5
bindsym XF86MonBrightnessUp exec brightnessctl s 5%+
bindsym XF86MonBrightnessDown exec brightnessctl s 5%-

# Screenshot
bindsym Print exec grim -g "$(slurp)" - | swappy -f -

# Lock
bindsym Ctrl+Mod1+l exec $lock_cmd

# Focus
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Move
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Stop mouse focus
focus_follows_mouse no

# Change workspaces
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10
bindsym $mod+Alt+1 workspace number 10
bindsym $mod+Alt+2 workspace number 9
bindsym $mod+Alt+3 workspace number 8
bindsym $mod+Alt+4 workspace number 7
bindsym $mod+Alt+5 workspace number 6

# Move window to workspace
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10
bindsym $mod+Shift+Alt+1 move container to workspace number 10
bindsym $mod+Shift+Alt+2 move container to workspace number 9
bindsym $mod+Shift+Alt+3 move container to workspace number 8
bindsym $mod+Shift+Alt+4 move container to workspace number 7
bindsym $mod+Shift+Alt+5 move container to workspace number 6

# Layout stuff
bindsym $mod+b splith
bindsym $mod+v splitv
bindsym $mod+t layout stacking
bindsym $mod+Shift+t layout tabbed
bindsym $mod+g layout toggle split
bindsym $mod+f fullscreen
bindsym $mod+s floating toggle
bindsym $mod+space focus mode_toggle
bindsym $mod+a focus parent

# Scratchpad
bindsym $mod+Shift+minus scratchpad show
bindsym $mod+minus move scratchpad

### Resize
bindsym $mod+r mode "resize"
mode "resize" {
    bindsym $left resize shrink width 10px
    bindsym $down resize grow height 10px
    bindsym $up resize shrink height 10px
    bindsym $right resize grow width 10px
    bindsym Left resize shrink width 10px
    bindsym Down resize grow height 10px
    bindsym Up resize shrink height 10px
    bindsym Right resize grow width 10px

    # Back to default
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

### Appearance
default_border pixel 2
client.focused #373B41 #373B41 #C5C8C8 #373B41 #373B41
client.focused_inactive #282A2E #282A2E #C5C8C8 #282A2E #282A2E
client.focused_tab_title #282A2E #282A2E #C5C8C8
client.unfocused #282A2E #282A2E #C5C8C8 #282A2E #282A2E
gaps inner 6
seat seat0 xcursor_theme Adwaita 1

